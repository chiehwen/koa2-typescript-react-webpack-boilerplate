{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": false,
        "rootDir": "./src",
        "outDir": "./dist",
        "allowJs": true,
        "jsx": "react"
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "exclude": [
      "node_modules"
    ]
}
